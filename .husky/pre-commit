#!/bin/sh

echo '================================================================================'
echo '🏗️👷 Styling, testing and building your project before committing'
echo '================================================================================'

# Navigate to project root
cd "$(dirname "$0")/.." || exit 1

echo '🎯 Starting VitaLC Code Quality Gate...'
echo '🔧 Step 1: Checking Prettier formatting...'
if ! yarn check-format; then
    echo '================================================================================'
    echo '🤢🤮🤢🤮 Its FOKING RAW - Your styling looks disgusting. 🤢🤮🤢🤮'
    echo '================================================================================'
    echo 'Prettier Check Failed. Run yarn format, add changes and try commit again.'
    exit 1
fi
echo '✅ Prettier formatting passed! 👯‍♀️✨'

echo '🔧 Step 2: Checking ESLint rules...'
if ! yarn check-lint; then
    echo '================================================================================'
    echo '😤🏀👋😤 Get that weak shit out of here! 😤🏀👋😤'
    echo '================================================================================'
    echo 'ESLint Check Failed. Fix the issues above, add changes and try commit again.'
    exit 1
fi
echo '✅ ESLint rules passed! 🕵️‍♂️🔍'

echo '🔧 Step 3: Checking TypeScript compilation...'
if ! yarn check-types; then
    echo '================================================================================'
    echo '🤡😂❌🤡 Failed Type check. 🤡😂❌🤡'
    echo '================================================================================'
    echo 'Fix the type errors above, add changes and try commit again.'
    exit 1
fi
echo '✅ TypeScript compilation passed! 🔷⚡'

echo '================================================================================'
echo '🤔🤔🤔🤔... Alright.... Code looks good to me... Trying to build now. 🤔🤔🤔🤔'
echo '================================================================================'
echo '⚙️  Step 4: Building both client and server...'
if ! yarn build; then
    echo '================================================================================'
    echo '❌👷🔨❌ Better call Bob... Because your build failed ❌👷🔨❌'
    echo '================================================================================'
    echo 'Build failed. Fix the errors above and try commit again.'
    exit 1
fi
echo '✅ Build successful! Next.js + TypeScript compiled perfectly! 🚀🔥'

echo '================================================================================'
echo '🎉 ========================================================================='
echo '🎉    CODE QUALITY CHECKS PASSED! COMMIT APPROVED!    '
echo '🎉 ========================================================================='
echo '✅ All checks completed successfully!'
echo '✅ Prettier formatting: PASSED ✨'
echo '✅ ESLint linting: PASSED 🔍'
echo '✅ TypeScript types: PASSED 🔷'
echo '✅ Full build: PASSED 🚀'
echo '🎉 ========================================================================='
echo '✅✅✅✅ You win this time... I am committing this now! ✅✅✅✅'
echo '================================================================================'
 