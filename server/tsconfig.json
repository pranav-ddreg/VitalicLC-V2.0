{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "types": [],
    "typeRoots": ["./types"]
  },
  "include": [
    "*.ts",
    "*.js",
    "config/*.ts",
    "config/*.js",
    "controller/*.ts",
    "controller/*.js",
    "model/*.ts",
    "model/*.js",
    "middleware/*.ts",
    "middleware/*.js",
    "routes/*.ts",
    "routes/*.js",
    "services/*.ts",
    "services/*.js",
    "utils/*.ts",
    "utils/*.js",
    "validation/*.ts",
    "validation/*.js",
    "types/**/*.ts",
    "types/**/*.js"
  ],
  "exclude": ["node_modules", "dist", "tests"]
}
